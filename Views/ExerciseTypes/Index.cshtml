@model IEnumerable<BeFitApp.Models.ExerciseType>

@{
    ViewData["Title"] = "Typy ćwiczeń";
}

<h1>Typy ćwiczeń</h1>

@* Tylko zalogowani użytkownicy *@
@if (User.Identity.IsAuthenticated)
{
    <a asp-action="Create">Dodaj nowy</a>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Zmień</a>
                        <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                    }
                </td>

        </tr>
}
    </tbody>
</table>
